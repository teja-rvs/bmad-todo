# Copy to .env and set values. Do not commit .env.
# Generate SECRET_KEY_BASE: cd bmad-todo-api && rails secret

# Frontend API base URL (local dev: http://localhost:3000; Docker: http://api:3000)
VITE_API_URL=http://localhost:3000

# Rails API (used by api service in Compose)
RAILS_ENV=development
DATABASE_URL=postgresql://bmad_todo_api:bmad_todo_api@localhost:5432/bmad_todo_api_development

# Required in production; do not commit real value
SECRET_KEY_BASE=

# API CORS allowed origin (default: http://localhost:8080). Set for Vite dev (e.g. http://localhost:5173) or production client URL
# CORS_ORIGIN=http://localhost:5173
